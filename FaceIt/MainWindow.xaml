<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FaceIt.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FaceIt"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <PasswordBox x:Name="Pass" Width="200" MaxLength="16" PasswordChanged="passwordBox_PasswordChanged"  Header="Password"  PlaceholderText="Enter your password" PasswordChar="#"  />
        <TextBlock x:Name="statusText" Text="TTT" Margin="10" HorizontalAlignment="Center" />
        <Button x:Name="button" Content="UseFaceID" Click="button_Click" />
        <Grid>
            <Frame x:Name="rootFrame"/>
        </Grid>

    </StackPanel>
</Window>
